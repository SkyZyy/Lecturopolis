<html>
    {{> head}}

    <body>
        {{> header}}

        <div class="center-align form-div">
            <form action="/admin" method="POST">
                <div tabindex= "0" class="form-header">
                    <h1>Administrador</h1>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="Nombre del evento" name="event" type="text" class="validate">
                        <label for="event">Nombre del evento</label>
                    </div>

                    <div class="input-field col s12">
                        <input placeholder="Tipo de evento" name="type" type="text" class="validate">
                        <label for="type">Tipo de evento</label>
                    </div>

                    <div class="input-field col s12">
                        <input placeholder="Fecha del evento" name="date" type="text" class="validate">
                        <label for="date">Fecha del evento</label>
                    </div>
                </div>
                
                <button class="form-btn">Actualizar</button>

                <hr style="width: 80%;">
            </form>
        </div>
    </body>
</html>