<html lang="es">
    {{> head}}
    
    <body>       
        {{> header}}

        <main>
            <table class="centered">
                <thead>
                    <tr role="row" tabindex="0">
                        <th role="columnheader">Evento</th>
                        <th role="columnheader">Tipo</th>
                        <th role="columnheader">Fecha</th>
                        <th role="columnheader">Lugar</th>
                        {{#ifCond user.username "==" "Admin"}}
                            <th role="columnheader">Borrar</th>
                            <th role="columnheader">Editar</th>
                        {{/ifCond}}
                    </tr>
                </thead>
        
                <tbody>
                    {{#ifCond user.username "==" "Admin"}}
                        {{#each events}}
                            <tr role="row" tabindex="0">
                                <td role="cell">{{event}}</td>
                                <td role="cell">{{type}}</td>
                                <td role="cell">{{date}}</td>
                                <td role="cell">{{place}}</td>
                                <td role="cell">
                                    <form action="/eventos/borrar/{{_id}}" method="POST">
                                        <button class="delete_btn" type="submit">
                                            Borrar                                            
                                        </button>
                                    </form>
                                </td>
                                <td role="cell"> 
                                    
                                        <a class="edit_btn" href="/eventos_editar/{{_id}}" type="submit">
                                            Editar                                            
                                        </a> 
                                      
                                </td>
                            </tr>
                        {{/each}}
                    {{else}}
                        {{#each events}}
                            <tr role="row" tabindex="0">
                                <td role="cell">{{event}}</td>
                                <td role="cell">{{type}}</td>
                                <td role="cell">{{date}}</td>
                                <td role="cell">{{place}}</td>
                            </tr>
                        {{/each}}
                    {{/ifCond}}
                    
                </tbody>
            </table>
        </main>
    </body>

    <footer>

    </footer>

</html>