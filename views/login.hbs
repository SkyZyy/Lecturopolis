<html lang="es">
    {{> head}}

    <body>
        {{> header}}        
        <div class="center-align form-div" role="form">
            <form action="/login" method="POST">

                <div tabindex="0" class="form-header">
                    <h1>Conéctate</h1>
                </div>

                <div class="row" role="cell">
                    <div class="input-field col s12">
                        <i class ="material-icons prefix">email</i>
                        <input placeholder="Correo Electrónico" name="email" type="email" class="validate" aria-describedby="username-tip" aria-required="true">
                        <label for="email">Email</label>
                    </div>

                    <div class="input-field col s12">
                        <i class ="material-icons prefix">lock</i>
                        <input placeholder="Contraseña" name="password" type="password" class="validate" aria-describedby="password-tip" aria-required="true">
                        <label for="password">Contraseña</label>
                    </div>
                </div>

                <button aria-label="Iniciar sesión" class="form-btn">Iniciar sesión</button>

                <br>
                <br>

                <a role="buttom" aria-label="Regístrate" href="/registrarse" class="col s6">Registrate</a>

                <hr style="width: 80%;">

            </form>
        </div>
    </body>

</html>